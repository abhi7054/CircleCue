<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/circle_cue_logo"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/blockChatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_login"
            android:text="Block User"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:padding="2dp"/>

        <Button
            android:id="@+id/reportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_login"
            android:text="Report User"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:padding="2dp"/>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chatRoomRecyclerView"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15sp"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chatRoomAttachmentButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_attach"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/chatRoomMessageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:hint="Enter the Message"
            android:padding="10dp"
            android:layout_weight="25"
            android:background="@drawable/rounded_white_background"/>

        <Button
            android:id="@+id/chatRoomSendMessageButton"
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_send_24dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</LinearLayout>